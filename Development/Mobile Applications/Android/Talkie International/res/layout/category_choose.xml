<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <ImageView
        android:id="@+id/chooseCategoryBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:src="@drawable/choose_object_bg_clean"
        android:scaleType="centerCrop"/>
    
    <ImageView
        android:id="@+id/chooseCategoryCloudsTopLower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/choose_category_clouds_top_2"/>
    
    <ImageView
        android:id="@+id/chooseCategoryCloudsTopUpper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/choose_category_clouds_top_1"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >
        
	    <ImageView
	        android:id="@+id/animals"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_gravity="center"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_weight="1"
	        android:clickable="true"
	        android:onClick="animalsClickListener"
	        android:src="@drawable/chest_opened_animals" />
	    
	    <ImageView
	        android:id="@+id/vegetables"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_gravity="center"
	        android:layout_weight="1"
	        android:clickable="true"
	        android:layout_marginRight="10dp"
	        android:onClick="vegetablesClickListener"
	        android:src="@drawable/chest_opened_fruits" />
	    
	    <ImageView 
	        android:id="@+id/newLevels"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:clickable="true"
	        android:onClick="newLevelsClickListener"
	        android:src="@drawable/chest_inactive"
	        android:layout_gravity="center"
	        android:layout_marginRight="10dp"/>
	    
    </LinearLayout>
    
    <ImageView
        android:id="@+id/chooseCategoryCloudsBottomLower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rotation="180"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@drawable/choose_category_clouds_top_2"/>
    
    <ImageView
        android:id="@+id/chooseCategoryCloudsBottomUpper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@drawable/powered_by_vivacom_bg" />

</RelativeLayout>