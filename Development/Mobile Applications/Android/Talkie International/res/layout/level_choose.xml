<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:id="@+id/chooseLevelView">
    
    <ImageView
        android:id="@+id/chooseLevelBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:src="@drawable/choose_object_bg_clean"
        android:scaleType="centerCrop"/>
    
    <ImageView
        android:id="@+id/chooseCategoryCloudsBottomUpper"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@drawable/powered_by_vivacom_bg"/>
    
	<RelativeLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerInParent="true">
		
		<RelativeLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content">
	    
			<RelativeLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:clickable="true"
		        android:tag="1"
		        android:onClick="levelChoose"
		        android:layout_centerVertical="true">
			    
				<ImageView
				    android:id="@+id/bubble"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
		        	android:src="@drawable/choose_object_object_active"  />
			    
				<ImageView
				    android:id="@+id/star"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_centerInParent="true"
				    android:src="@drawable/star_on" />
				
			</RelativeLayout>
		    
			<RelativeLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:clickable="true"
		        android:tag="2"
		        android:onClick="levelChoose"
		        android:layout_marginLeft="60dp"
		        android:layout_centerVertical="true">
			    
				<ImageView
				    android:id="@+id/bubble"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
		        	android:src="@drawable/choose_object_object_active"  />
			    
				<ImageView
				    android:id="@+id/star"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_centerInParent="true"
				    android:src="@drawable/star_on" />
				
			</RelativeLayout>
		    
			<RelativeLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:clickable="true"
		        android:tag="3"
		        android:onClick="levelChoose"
		        android:layout_marginLeft="120dp"
		        android:layout_centerVertical="true">
			    
				<ImageView
				    android:id="@+id/bubble"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
		        	android:src="@drawable/choose_object_object_active"  />
			    
				<ImageView
				    android:id="@+id/star"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_centerInParent="true"
				    android:src="@drawable/star_on" />
				
			</RelativeLayout>
		    
			<RelativeLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:clickable="false"
		        android:tag="anim-1"
		        android:onClick="animationChoose"
		        android:layout_marginLeft="180dp"
		        android:layout_centerVertical="true">
			    
				<ImageView
				    android:id="@+id/animation"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
		        	android:src="@drawable/choose_object_animation_inactive"  />
			    
				<ImageView
				    android:id="@+id/locked"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_centerInParent="true" />
				
			</RelativeLayout>
		    
		</RelativeLayout>
		
		<RelativeLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="55dp" >
			
			<RelativeLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:clickable="true"
		        android:tag="4"
		        android:onClick="levelChoose"
		        android:layout_centerVertical="true">
			    
				<ImageView
				    android:id="@+id/bubble"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
		        	android:src="@drawable/choose_object_object_inactive"  />
			    
				<ImageView
				    android:id="@+id/star"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_centerInParent="true"
				    android:src="@drawable/padlock_small" />
				
			</RelativeLayout>
		    
			<RelativeLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:clickable="true"
		        android:tag="5"
		        android:onClick="levelChoose"
		        android:layout_marginLeft="60dp"
		        android:layout_centerVertical="true">
			    
				<ImageView
				    android:id="@+id/bubble"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
		        	android:src="@drawable/choose_object_object_inactive"  />
			    
				<ImageView
				    android:id="@+id/star"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_centerInParent="true"
				    android:src="@drawable/padlock_small" />
				
			</RelativeLayout>
		    
			<RelativeLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:clickable="true"
		        android:tag="6"
		        android:onClick="levelChoose"
		        android:layout_marginLeft="120dp"
		        android:layout_centerVertical="true">
			    
				<ImageView
				    android:id="@+id/bubble"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
		        	android:src="@drawable/choose_object_object_inactive"  />
			    
				<ImageView
				    android:id="@+id/star"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_centerInParent="true"
				    android:src="@drawable/padlock_small" />
				
			</RelativeLayout>
		    
			<RelativeLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:clickable="false"
		        android:tag="anim-2"
		        android:onClick="animationChoose"
		        android:layout_marginLeft="180dp"
		        android:layout_centerVertical="true">
		    
				<ImageView
				    android:id="@+id/animation"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
		        	android:src="@drawable/choose_object_animation_inactive"  />
			    
				<ImageView
				    android:id="@+id/locked"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_centerInParent="true" />
			
			</RelativeLayout>
		
		</RelativeLayout>
		
		<RelativeLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="110dp">
			    
			<RelativeLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:clickable="true"
		        android:tag="7"
		        android:onClick="levelChoose"
		        android:layout_centerVertical="true">
			    
				<ImageView
				    android:id="@+id/bubble"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
		        	android:src="@drawable/choose_object_object_inactive"  />
			    
				<ImageView
				    android:id="@+id/star"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_centerInParent="true"
				    android:src="@drawable/padlock_small" />
				
			</RelativeLayout>
		    
			<RelativeLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:clickable="true"
		        android:tag="8"
		        android:onClick="levelChoose"
		        android:layout_marginLeft="60dp"
		        android:layout_centerVertical="true">
			    
				<ImageView
				    android:id="@+id/bubble"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
		        	android:src="@drawable/choose_object_object_inactive"  />
			    
				<ImageView
				    android:id="@+id/star"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_centerInParent="true"
				    android:src="@drawable/padlock_small" />
				
			</RelativeLayout>
		    
			<RelativeLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:clickable="true"
		        android:tag="9"
		        android:onClick="levelChoose"
		        android:layout_marginLeft="120dp"
		        android:layout_centerVertical="true">
		    
			<ImageView
			    android:id="@+id/bubble"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
	        	android:src="@drawable/choose_object_object_inactive"  />
		    
			<ImageView
			    android:id="@+id/star"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_centerInParent="true"
			    android:src="@drawable/padlock_small" />
			
		</RelativeLayout>
	    
			<RelativeLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:clickable="false"
		        android:tag="anim-3"
		        android:layout_centerVertical="true"
		        android:onClick="animationChoose"
		        android:layout_marginLeft="180dp">
			    
				<ImageView
				    android:id="@+id/animation"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
		        	android:src="@drawable/choose_object_animation_inactive"  />
				
			</RelativeLayout>
		
	    </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>